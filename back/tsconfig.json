{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
    }
  },
  "include": ["src"],
}